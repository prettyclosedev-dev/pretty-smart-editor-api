datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id    Int    @id @default(autoincrement())
  name  String
  token String @unique @default(uuid())
  ip    String @unique
}

enum UserRole {
  SUPER
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String?    @unique
  designs   Design[]
  role      UserRole   @default(VIEWER)
  Category  Category[]
  templates Template[]
  brands    Brand[]
}

model Color {
  id      Int      @id @default(autoincrement())
  value   String
  primary Boolean? @default(false)
  rank    Int?
  brand   Brand?   @relation(fields: [brandId], references: [id])
  brandId Int?
}

model Font {
  id      Int      @id @default(autoincrement())
  name    String?
  value   String?
  url     String?
  italic  Boolean? @default(false)
  bold    Boolean? @default(false)
  google  Boolean? @default(false)
  brand   Brand?   @relation(fields: [brandId], references: [id])
  brandId Int?
}

model Brand {
  id                Int        @id @default(autoincrement())
  prettySmartId     String?    @unique
  name              String
  tagline           String?
  industry          String?
  email             String?    @unique
  phone             String?
  colors            Color[]
  fonts             Font[]
  logo              String
  wordmark          String
  icon              String
  user              User?      @relation(fields: [userId], references: [id])
  userId            Int?
  specialCategories Category[] @relation("CategoriesBrandRelation")
  specialDesigns    Design[]   @relation("DesignsBrandRelation")
}

model Page {
  id         Int     @id @default(autoincrement())
  polotnoId  String? @unique
  children   Json[]
  width      String  @default("auto")
  height     String  @default("auto")
  background String
  duration   Int?
  bleed      Int
  // design     Design  @relation(fields: [designId], references: [id], onDelete: Cascade)
  designId   Int
}

model Category {
  id                 Int        @id @default(autoincrement())
  name               String
  creator            User?      @relation(fields: [creatorId], references: [id])
  creatorId          Int?
  public             Boolean?   @default(false)
  designs            Design[]
  templates          Template[]
  tags               String[]
  availableForBrands Brand[]    @relation("CategoriesBrandRelation")
}

model Design {
  id                 Int        @id @default(autoincrement())
  polotnoId          String?    @unique
  name               String
  preview            String
  pages              Json[]
  width              Int
  height             Int
  fonts              String[]
  unit               String     @default("px")
  dpi                Int        @default(72)
  publishedDate      DateTime   @default(now())
  editedDate         DateTime   @default(now())
  categories         Category[]
  public             Boolean?   @default(false)
  creator            User?      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId          Int?
  tags               String[]
  availableForBrands Brand[]    @relation("DesignsBrandRelation")
}

model Template {
  id            Int        @id @default(autoincrement())
  name          String
  categories    Category[]
  publishedDate DateTime   @default(now())
  editedDate    DateTime   @default(now())
  width         Int
  height        Int
  html          String
  preview       String
  public        Boolean?   @default(false)
  creator       User?      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId     Int?
  description   String
  tags          String[]
}
